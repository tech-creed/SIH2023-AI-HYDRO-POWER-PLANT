    <script>
        document.getElementById('stateForm').addEventListener('submit', function (event) {
            event.preventDefault();
            const selectedState = document.getElementById('state').value.toUpperCase();

            fetch('http://localhost:3000/rainfall', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 'state': selectedState })
            }).then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok.');
                }
                return response.json();
            })
                .then(data => {
                    const imgPaths = data.generatedGraphPath;

                    const resultChartSection = document.getElementById('resultChart');
                    resultChartSection.style.display = 'block';

                    const resultImg1 = document.getElementById('districtWise');
                    const resultImg2 = document.getElementById('stateAnalysis');
                    const resultImg1Link = document.getElementById('districtWiseLink')
                    const resultImg2Link = document.getElementById('stateAnalysisLink')

                    resultImg1Link.href = imgPaths[0]
                    resultImg2Link.href = imgPaths[1]
                    resultImg1.src = imgPaths[0];
                    resultImg2.src = imgPaths[1];
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        })
    </script>
